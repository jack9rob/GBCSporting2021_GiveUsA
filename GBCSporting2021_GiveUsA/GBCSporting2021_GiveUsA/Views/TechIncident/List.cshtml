@model IEnumerable<Incident>

<h1>@ViewBag.Name</h1>
<form asp-action="SelectTechnician">
    <h1 class="mb-3">Technician Incidents</h1>
    <button class="btn btn-primary mb-3" type="submit">Switch Technician</button>
</form>

@if (Model.Count() == 0)
{
    <h1 class="text-center">No Incidents</h1>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Date Opened</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Incident incident in Model)
            {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.Customer.Firstname @incident.Customer.Lastname </td>
                    <td>@incident.Product.Name</td>
                    <td>@incident.DateOpened.ToString("MM'/'dd'/'yyyy")</td>
                    <td>
                        <a asp-controller="TechIncident" asp-action="Edit" asp-route-id="@incident.IncidentId" asp-route-slug="@incident.Slug" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>

}