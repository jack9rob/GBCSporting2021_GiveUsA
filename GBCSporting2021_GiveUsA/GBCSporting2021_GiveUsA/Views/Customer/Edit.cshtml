@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}
<h2>@ViewBag.Action Customer</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Firstname" style="width:80px">First Name</label>
        <input asp-for="Firstname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Lastname" style="width:80px">Last Name</label>
        <input asp-for="Lastname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" style="width:80px">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City" style="width:80px">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Province" style="width:80px">Province/State</label>
        <input asp-for="Province" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Postalcode" style="width:80px">Postal Code</label>
        <input asp-for="Postalcode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CountryId" style="width:80px">Country</label>
        <select asp-for="CountryId" class="form-control">
            <option value="">Select a country...</option>
            @foreach (Country c in ViewBag.Countries)
            {
                <option value="@c.CountryId">@c.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email" style="width:80px">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone" style="width:80px">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-success">@ViewBag.Action</button>
    <a asp-controller="Customer" asp-action="List" class="btn btn-danger">Cancel</a>
    
</form>