@model Product
@{
    ViewBag.Title = "Delete Product";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete product @Model.Name</h3>

<form asp-action="Delete" method="post" class="mb-3">
    <input type="hidden" asp-for="ProductId" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-success">Cancel</a>
    </div>
</form>