@model Technician
@{
    string title = ViewBag.Action + " Technician";
    ViewBag.Title = title;
}

<h1>Delete</h1>
<h3>Are you sure you want to delete Technician @Model.Name </h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TechnicianId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Delete" asp-action="List" class="btn btn-primary">Cancel</a>
</form>