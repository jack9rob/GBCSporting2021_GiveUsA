@model Registration
@{
    ViewBag.Title = "Delete Registration";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete registration for @Model.Product.Name</h3>

<form asp-controller="Registration" asp-action="Delete" method="post">
    <input type="hidden" asp-for="RegistrationId" />
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="registrations" class="btn btn-primary">Cancel</a>
    </div>
</form>